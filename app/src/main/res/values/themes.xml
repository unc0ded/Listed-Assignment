<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ListedApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ListedApp" parent="Base.Theme.ListedApp" />

    <style name="Widget.App.Button.IconButton.Filled.Tonal" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Shape.Corner.Custom</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.IconButton.Filled.Tonal
        </item>
    </style>

    <style name="Widget.App.Button.IconButton.Outlined" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Shape.Corner.Custom</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.IconButton.Outlined</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Shape.Corner.Custom</item>
        <item name="strokeColor">#D8D8D8</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="itemActiveIndicatorStyle">@null</item>
    </style>

    <style name="ShapeAppearance.App.Shape.Corner.Custom" parent="">
        <item name="cornerFamily">?attr/shapeCornerFamily</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="ThemeOverlay.App.Button.IconButton.Filled.Tonal" parent="ThemeOverlay.Material3.Button.IconButton.Filled.Tonal">
        <item name="colorOnContainer">#FFFFFF</item>
        <item name="colorContainer">#1EFFFFFF</item>
    </style>

    <style name="ThemeOverlay.App.Button.IconButton.Outlined" parent="ThemeOverlay.Material3.Button.IconButton">
        <item name="colorOnContainer">#999CA0</item>
        <item name="colorOutline">#14000000</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSecondaryContainer">@android:color/black</item>
        <item name="colorOnSecondaryContainer">@android:color/black</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="colorOnSurfaceVariant">@color/text_trunks</item>
    </style>

    <style name="TextAppearance.App.TabItem" parent="">
        <item name="android:fontFamily">@font/figtree</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.BottomNavText" parent="">
        <item name="android:fontFamily">@font/figtree</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>